<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/editor_pic1"
    android:layout_height="match_parent"
    tools:context=".ActivitysAndFragments.EditorActivity">

<com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
    android:id="@+id/youtube_player_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:padding="10dp"
    app:autoPlay="false" />

    <ImageView
        android:id="@+id/startVideo"
        android:layout_width="wrap_content"
        android:onClick="PlayVideo"
        android:layout_height="wrap_content"
        android:layout_marginTop="575dp"
       android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/button2" />

    <TextView
        android:id="@+id/songNameEditorPage"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/singerNameEditorPage"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:text="TextView" />


</FrameLayout>