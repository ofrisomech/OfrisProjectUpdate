<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ombre_background"
    tools:context=".SelectPhoto">

    <!--Button to open the image selector-->

    <!--ImageView to preview the selected image-->


    <ImageView
        android:id="@+id/BSelectImage"
        style="@style/MyEditTextStyle"
        android:layout_height="270dp"
        android:layout_width="270dp"
        android:background="@drawable/roundedimage"
        android:clipToOutline="true"
        android:padding="3dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile"
        android:text="SELECT IMAGE"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.668" />

    <Switch
        android:id="@+id/switch1"
        style="@style/MyEditTextStyle"
        android:layout_width="305dp"
        android:layout_height="95dp"
        android:checked="true"
        android:gravity="center"
        android:text="Private Recording"
        android:textColor="@color/white"
        android:textOff="No"
        android:textOn="Yes"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/BSelectImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.69" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MyEditTextStyle"
        android:text="POST"
        android:onClick="GetCurrentUser"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:backgroundTint="#DB5DF1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BSelectImage"
        app:layout_constraintVertical_bias="0.62" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="62dp"
        android:fontFamily="@font/modern_antiqua"
        android:gravity="center_vertical"
        android:text="Design your post"
        android:textColor="#F0F30BCC"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/switch1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>